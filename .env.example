#-------------------------------------------
# Common settings
#-------------------------------------------

# Timezone (TZ identifier: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TIMEZONE=Europe/Prague


#-------------------------------------------
# Database config
#-------------------------------------------

# Database
DB_USER=admin
DB_PASSWORD=password
DB_SERVER=localhost
DB_PORT=5432
DB_NAME=mafil-psq

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_SERVER}:${DB_PORT}/${DB_NAME}?schema=public"


#-------------------------------------------
# Database manager config
#-------------------------------------------

# Adminer port
ADMINER_PORT=8080


#-------------------------------------------
# Server config
#-------------------------------------------

# Server port
SERVER_PORT=4000

# Time-to-live (TTL) in seconds
THROTTLE_TTL=60

# Amount of requests client can make in given TTL
THROTTLE_LIMIT=100

# Server URL
SERVER_URL=http://127.0.0.1:${SERVER_PORT}

# API key web app will use to make requests to the server
SERVER_API_KEY_FOR_WEB=HAHAHAHAAHAHAHAHA

# Default operator PDF language - options: 'cs', 'en'
PDF_OPERATOR_LANGUAGE_CODE=cs


#-------------------------------------------
# Web config
#-------------------------------------------

# Web port
WEB_PORT=3000

# Web URL
WEB_URL=http://127.0.0.1:${WEB_PORT}

# MAFILDB API URL
MAFILDB_API_URL=
