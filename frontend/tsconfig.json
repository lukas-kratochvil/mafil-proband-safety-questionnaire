{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Base options */
    "target": "ES2022",
    /* If transpiling with TypeScript (tsc) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true, // insures the right usage of ES module syntax (related to the 'module' setting)
    "outDir": "./dist",
    "noEmit": true,
    /* If code runs in the DOM */
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    /* For React app */
    "jsx": "react-jsx",
    /* TODO */
    "types": [
      "vitest/globals", // enable using Vitest globals without importing them (https://vitest.dev/config/#globals)
    ],
    /* Custom imports mapping */
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/*",
      ],
      "@test-utils": [
        "src/__tests__/utils.ts",
      ],
    },
  },
  "include": [
    "src",
  ],
  "exclude": [
    "src/**/__tests__/**/*.[ts, tsx]",
    "src/**/__mocks__/**/*.[ts, tsx]",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json",
    },
  ],
}
